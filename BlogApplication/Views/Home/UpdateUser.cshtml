<!--View for updating a user for admin-->
@using BlogApplication.Models
@model User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Update ";
}
<br/><br/>
     <form method="post" action="/Home/EditUser" enctype="multipart/form-data" class="container bg-white border form-style pt-3">

         <p class="display-4">Edit User</p>
         <hr>
         <div class="line"></div>
         <p class="text-danger">
             @if (Model != null)
             {@Model.Error}
         </p>
         <img src="@Model.Photo" class="img-thumbnail" />
         <p>@Model.Photo</p>
         <div class="form-group">
             <label asp-for="Username">
                 Username<span class="text-danger">*</span>
             </label>
             <input class="form-control" asp-for="Username" />
             <span class="text-danger" asp-validation-for="Username"></span>
         </div>

         <div class="form-group">
             <label asp-for="Email">
                 Email<span class="text-danger">*</span>
             </label>
             <input class="form-control" asp-for="Email" />
             <span class="text-danger" asp-validation-for="Email"></span>
         </div>

         <div class="form-group">
             <label asp-for="OldPassword">Old Password*</label>
             <input class="form-control" type="password" asp-for="OldPassword" />
             <span asp-validation-for="OldPassword"></span>
             <span class="text-danger">
                 <!--to display any error message-->
                 @if (Model != null)
                 {@Model.PassErr}
             </span>
         </div>
         <div class="form-group">
             <label asp-for="NewPassword">New Password</label>
             <input class="form-control" type="password" asp-for="NewPassword" />
             <span asp-validation-for="NewPassword"></span>
             <span class="text-danger">
                 <!--to display any error message-->
                 @if (Model != null)
                 {@Model.NPassErr}
             </span>
         </div>
         <input asp-for="Id" type="hidden">

         <button type="submit" class="btn btn-success">Update</button>
         <br />
         <br />
     </form>
