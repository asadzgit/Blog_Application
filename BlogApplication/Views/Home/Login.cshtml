<!--View for Login of al types of users-->

@using BlogApplication.Models
@model Login
@{
    Layout = "~/Views/Shared/_LoginSignupLayout.cshtml";
    ViewData["Title"] = "Login";
}
<br />
<br />
<br />
<form method="post" action="/Home/Login" class="container bg-white border justify-content-center form-style">
    <p class="display-4">Login</p>
    <hr />
    <div class="line"></div>
    <p class="text-danger">
        <!--to display any error message-->
        @if (Model != null)
        {@Model.Error}
    </p>
    <div class="form-group">
        <label asp-for="Username">Username<span class="text-danger">*</span></label>
        <input class="form-control" asp-for="Username" />
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password<span class="text-danger">*</span></label>
        <input class="form-control" type="password" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="d-flex justify-content-between align-items-end">
        <button type="submit" class="btn btn-info">Login</button>
    </div>
    <br />
    <div>
        Don't have an account? <a asp-action="Signup" class="btn btn-primary pt-1"> Sign up</a>
    </div>
    <br />
</form>
<br/>