<!--iew for updating the profile for user-->
@using BlogApplication.Models
@model User
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<form method="post" action="/Home/Profile" enctype="multipart/form-data" class="container bg-white border justify-content-center form-style pt-3">

    <p class="display-4">Profile</p>
    <div class="line"></div>
    <img src="@Model.Photo" class="img-thumbnail" />
    <p>@Model.Photo</p>
    <p class="text-danger">
        <!--to display any error message-->
        @if (Model != null)
        {@Model.Error}
    </p>
    <div class="form-group">
        <label asp-for="Username">Username*</label>
        <input class="form-control"  asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email*</label>
        <input class="form-control"  asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <p class="mb-1">Image</p>
        <p class="d-inline mr-2">Currently:</p>
        <p class="d-inline text-primary">@Model.Photo</p>
        <p class="mb-1">Change:</p>
        <input asp-for="Image" />
        <span asp-validation-for="Photo"></span>
        <span class="text-danger">
            <!--to display any error message-->
            @if (Model != null)
            {@Model.ExtErr}
        </span>
    </div>
    <div class="form-group">
        <label asp-for="OldPassword">Old Password*</label>
        <input class="form-control" type="password" asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
        <span class="text-danger">
            <!--to display any error message-->
            @if (Model != null)
            {@Model.PassErr}
        </span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">New Password</label>
        <input class="form-control" type="password" asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
        <span class="text-danger">
            <!--to display any error message-->
            @if (Model != null)
            {@Model.NPassErr}
        </span>
    </div>
    <button type="submit" class="btn btn-info">Update</button>
    <br />
    <br />
    <br />
</form>
